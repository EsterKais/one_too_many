<%= form_for @bean do |f| %>
  <pre><%= @bean.errors.to_json %></pre>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :roast %>
  <%= f.text_field :roast %>

  <%= f.label :flavour %>
  <%= f.text_field :flavour %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :country_id %>
  <%= f.collection_select(:country_id, Country.all, :id, :name) %>

  <%= f.submit (@bean.new_record? ? "Create" : "Update") %>

<% end %>
